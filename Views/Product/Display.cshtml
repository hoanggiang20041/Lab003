@model Lab003.Models.Product

<h2>@Model.Name</h2>
<p><strong>Giá:</strong> @Model.Price VNĐ</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Danh mục:</strong> @(Model.Category?.Name ?? "Không có danh mục")</p>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="@Model.Name" width="300" />
}

<a asp-action="Index" class="btn btn-primary">Quay lại</a>
