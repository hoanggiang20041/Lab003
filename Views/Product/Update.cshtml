@model Lab003.Models.Product

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<h2>Cập nhật sản phẩm</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Danh mục</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" required>
            <option value="">-- Chọn danh mục --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Ảnh hiện tại</label>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" width="200" />
        }
    </div>

    <div class="form-group">
        <label>Chọn ảnh mới (nếu muốn thay đổi)</label>
        <input type="file" name="imageUrl" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
